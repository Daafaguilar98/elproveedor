
<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :codigo, placeholder: "Codigo",required: "" %>
  </div>
  <div class="field">
    <%= f.text_field :nombre, placeholder: "Nombre del producto",required: "" %>
  </div>
  <div class="field">
    <%= select_tag "categoria", options_from_collection_for_select(CategoryProduct.all, "categoria", "categoria"), prompt: "Categoria" %>
  </div>
  <div class="field">
    <%= select_tag "marca", options_from_collection_for_select(BrandingProduct.all, "marca", "marca"), prompt: "Marca" %>
  </div>
  <div class="field">
    <%= f.number_field :precio, placeholder: "$ Precio",required: "" %>
  </div>
  <div class="actions">
    <%= f.submit 'Crear Producto', class: 'btn' %>
  </div>
<% end %>
